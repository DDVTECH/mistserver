# This file is the top-most EditorConfig file
root = true

# All Files
[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

# Makefiles
[Dockerfile]
indent_style = tab
indent_size = 8

# YAML Files
[*.{yaml,sh}]
indent_size = 2

[*.py]
indent_size = 4
